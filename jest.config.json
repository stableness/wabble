{

  "preset": "ts-jest",
  "testRunner": "jest-circus/runner",
  "testEnvironment": "node",

  "testTimeout": 500,

  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.test.json"
    }
  },

  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },

  "testPathIgnorePatterns": [
    "<rootDir>/dist/",
    "<rootDir>/node_modules/"
  ],

  "coveragePathIgnorePatterns": [
    "node_modules/",
    "test/__fixtures__/",
    "test/__helpers__/"
  ],

  "reporters": [
    "default",
    "jest-junit"
  ]

}
